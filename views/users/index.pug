extends ../layouts/common

block content
    //- img(src="/images/image.jpg")
    h1
        span.mr-3 User
        a.btn.btn-primary(href="/users/create") New

    .d-flex.align-items-center
        form.ml-auto(action="users/search" method="GET" class="d-flex")
            input(name="q" type="text" value=query class="form-control")
            button(class="btn btn-primary ml-2") Search

    table.table
        tr
            th Avatar
            th Name
            th Phone
            
            th
                each user in users
                    tr
                        td
                            img(src=user.avatar, width="32")
                        td= user.name
                        td= user.phone
                        td
                            a.btn.btn-light(href="/users/" + user.id) View